{
    "name": "ThreatSlayer",
    "version": "0.0.2",
    "description": "Automatically scan and block malicious websites.",
    "manifest_version": 3,
    "icons": {
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "author": "Interlock",
    "action": {
        "default_popup": "dashboard.html",
        "default_title": "ThreatSlayer Active"
    },
    "content_scripts": [
        {
        "js": ["script.js"],
        "matches": ["*://*/*"]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": ["icon48.png", "static/style.css", "static/fonts/TTF", "static/fonts/Webfont"],
            "matches": ["*://*/*"]
        }
    ],
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "scripting", "storage"
    ],
    "host_permissions": [
        "<all_urls>",
        "http://bouncer.interlock.network/*",
        "https://bouncer.interlock.network/*",
        "http://www.bouncer.interlock.network/*",
        "https://www.bouncer.interlock.network/*"
    ]
}
