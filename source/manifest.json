{
    "name": "ThreatSlayer: Security & Phishing Protection",
    "version": "0.0.10",
    "description": "__MSG_appDesc__",
    "default_locale": "en",
    "manifest_version": 3,
    "icons": {
        "16": "static/images/icon16.png",
        "48": "static/images/icon48.png",
        "128": "static/images/icon128.png"
    },
    "author": "Interlock",
    "action": {
        "default_popup": "popup/dashboard.html",
        "default_title": "__MSG_popup_title__"
    },
    "content_scripts": [
        {
            "js": [
                "content/script.js"
            ],
            "matches": [
                "*://*/*"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "static/*"
            ],
            "matches": [
                "*://*/*"
            ]
        }
    ],
    "background": {
        "service_worker": "service/worker.js",
	"type": "module"
    },
    "options_page": "options/options.html",
    "permissions": [
        "scripting",
        "storage"
    ],
    "host_permissions": [
        "<all_urls>",
        "http://bouncer.interlock.network/*",
        "https://bouncer.interlock.network/*",
        "http://www.bouncer.interlock.network/*",
        "https://www.bouncer.interlock.network/*"
    ]
}
