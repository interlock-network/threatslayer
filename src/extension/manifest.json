{
    "manifest_version": 3,
    "name": "ThreatSlayer: AI Threat Detection for Web3",
    "description": "__MSG_appDesc__",
    "default_locale": "en",
    "author": "Interlock",
    "version": "1.0.0",
    "icons": {
        "48": "assets/icons/icon48.png",
        "128": "assets/icons/icon128.png"
    },
    "action": {
        "default_icon": {
            "48": "assets/icons/icon48.png",
            "128": "assets/icons/icon128.png"
        }
    },
    "content_scripts": [
        {
            "js": [
                "script.js"
            ],
            "matches": [
                "*://*/*"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "threatslayer_logo.png"
            ],
            "matches": [
                "*://*/*"
            ]
        }
    ],
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "scripting",
        "storage",
        "downloads",
        "tabs"
    ],
    "host_permissions": [
        "<all_urls>"
    ]
}
